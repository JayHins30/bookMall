/* pages/add-address/add-address.wxss */
.add-address-box {
  padding: 30rpx;
}

.box-item {
  display: flex;
  margin: 20rpx;
}

.item-title {
  font-weight: bold;
  font-size: 36rpx;
  width: 25%;
  height: 72rpx;
  line-height: 72rpx;
}

.box-item input {
  /* border-bottom: 2rpx solid #a2a2a2; */
  padding: 10rpx 20rpx;
  flex: 1;
  background: #e7e7e7;
  border-radius: 20rpx;
  height: 60rpx;
}

.box-item picker {
  flex: 1;
}

.box-item textarea {
  padding: 20rpx;
  flex: 1;
  background: #e7e7e7;
  border-radius: 20rpx;
}

.add-button {
  width: 50%;
  background: #f64c0d;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  border-radius: 80rpx;
  margin-top: 100rpx;
}