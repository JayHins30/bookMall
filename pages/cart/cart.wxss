/* pages/cart/cart.wxss */


.st-item-header {
  padding: 30rpx;
  justify-content: flex-start;
  
  }
  .theme-checkbox {
   margin-right: 30rpx;
  }
  .item-list {
  padding-left: .77rem;
  position: relative;
  }
  .theme-checkbox {
   margin-top: -.24rem;
   position: absolute;
   left: 0;
   top: 50%;
  }
 
  .shopcar_item
  {
    display: flex;
    align-items: center;
    height: 200rpx;
    padding: 40rpx;
    background-color: #fff;
  }
  
  .product image
  {
    height: 180rpx;
    width: 180rpx;
  }
  
  
  .goods_count
  {
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: 200rpx;
  }
  
  
  .goods_count input
  {
    width: 40rpx;
    text-align: center;  
  }
  
  .shopcar_item_select
  {
    height: 100%;
    display: flex;
    align-items: center;
  }
  
  .shopcar_item_select icon
  {
    padding-right: 40rpx;
  }
  
  .product_intro
  {
    padding-left: 40rpx;
    width: 100%;
  }
  
  .product_title
  {
    font-size: 32rpx;
    font-weight: 500;
    margin-bottom: 20rpx;
  }
  
  .product_size
  {
    font-size: 26rpx;
    font-size: 200;
    margin-bottom: 20rpx;
  }
  
  .product_add
  {
    display: flex;
    width: 100%;
    justify-content: space-around;
  }
  .shopcar_all
  {
    padding-left: 40rpx;
  }
  .shopcar_close
  {
    position: fixed;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 140rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
  }
  
  .product_num
  {
    color: #f64c0d;
  }
  .add,.del{
    padding: 10rpx;
    width: 40rpx;
    height: 40rpx;
    background: #a2a2a2;
    line-height: 40rpx;
    text-align: center;
    font-size: 40rpx;
    border-radius: 50%;
    color: #fff;
    font-weight: bold;
  }
