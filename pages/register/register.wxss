/* pages/register/register.wxss */
.register-box {
  margin: 50rpx 20rpx 0 20rpx;
  height: 100vh;
}

.register-img {
  margin: 0 auto;
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 50rpx;
  text-align: center;
  box-shadow: 0px 0px 5px;
}


.register-input {
  border: 1rpx solid #a2a2a2;
  height: 80rpx;
  font-size: 40rpx;
  border-radius: 80rpx;
  box-sizing: border-box;
  padding: 0rpx 26rpx;
  margin: 20rpx;
  text-align: center;
}

.register-button {
  color: #fff;
  width: 400rpx;
  line-height: 38px;
  height: 80rpx;
  border-radius: 80rpx;
  margin: 50rpx auto;
}
.register-button{
  border: 1rpx solid #f64;
  background-color: #f64;
}

