/* components/index/book-item.wxss */
.bookitem-box {
  max-width: 640rpx;
  border-radius: 20rpx;
  background-color: #fff;
  margin: 0rpx 10rpx 10rpx 10rpx;
  padding: 0;
  box-sizing: border-box;
  overflow: hidden;
  box-shadow: 0px 3px 5px #a2a2a2;
}

.bookitem-box .itemImage {
  width: 100%;
  max-height: 400rpx;
}

.item-detail .title {
  height: 60rpx;
  font-size: 28rpx;
  line-height: 30rpx;
  overflow: hidden;
  display: block;
  padding: 20rpx 20rpx 0rpx 20rpx;
}

.item-detail .price {
  padding: 10rpx 20rpx 20rpx 20rpx;
  display: block;
  font-size: 32rpx;
  color: #f64c0d;
  font-weight: bold;
}