/* components/common/search/search.wxss */

.header {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: auto;
  width: 96%;
  margin: 0 auto;
}

.header .right-content,
.left-content {
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
  background-color: aliceblue;
  display: flex;
  align-items: center;
  /* border: 1px solid #7978f6; */
}

.left-content text {
  height: 100%;
  width: 100%;
  border-radius: 50%;
  background-color: #7978f6;
  font-size: 70rpx;
  border: 0;
  color: #ffffff;
  line-height: 70rpx;
}
.right-content text {
  height: 100%;
  width: 100%;
  border-radius: 50%;
  background-color: #ffffff;
  font-size: 70rpx;
  border: 0;
  color: #7978f6;
  line-height: 70rpx;
}

.search {
  border-radius: 2em;
  background-color: #f5f5f5;
  width: 75%;
  height: 70rpx;
  line-height: 70rpx;
  flex: 1;
  color: #000;
  text-align: center;
  border: 1px solid #e4e4e4;
  font-size: 30rpx;
  box-sizing: border-box;
}