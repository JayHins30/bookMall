/* components/me/addressItem/address.wxss */
.address-content{
  display:flex;
  box-sizing: border-box;
  padding: 20rpx 0rpx;
}
.address-right{
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: content-box;
  width: 100rpx;
  font-size: 44rpx;
  color: #a2a2a2;
}
.address{
  font-size: 30rpx;
}
.title .name{
  font-size: 36rpx;
  font-weight: bold;
}
.title .phone{
  font-size: 30rpx;
  color: #a2a2a2;
}
.moren{
  display: inline-block;
  height: 40rpx;
  width: 40rpx;
  padding:2rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx;
  color: #f64c0d;
  border:1px solid #f64c0d;
  border-radius: 50%;
  margin: 0 20rpx;
}